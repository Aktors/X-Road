<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <include file="serverconf/0-initial.xml"/>
    <include file="serverconf/1-indices.xml"/>
    <include file="serverconf/2-wsdlpublish.xml"/>
    <include file="serverconf/3-history.xml"/>
    <include file="serverconf/4-refactoring.xml"/>
    <include file="serverconf/5-backendtype.xml"/>
    <include file="serverconf/6-ownerauthtype.xml"/>
    <include file="serverconf/7-servicedescription.xml"/>
    <include file="serverconf/8-restauthorization.xml"/>
    <include file="serverconf/9-rest-auth-refactoring.xml"/>

    <!-- must be the last one -->
    <changeSet id="separate-admin-user" author="niis" context="admin" runAlways="true">
        <sql splitStatements="false">
        <![CDATA[
        alter function insert_history_row security definer;
        grant select,update,insert,delete on all tables in schema public to ${db_user};
        grant usage on all sequences in schema public to ${db_user};
        grant execute on all functions in schema public to ${db_user};
        revoke insert,update,delete on databasechangelog, databasechangeloglock from ${db_user};
        revoke insert,update,delete on history from ${db_user};
        ]]>
        </sql>
    </changeSet>
</databaseChangeLog>
