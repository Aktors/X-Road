
description "X-Road proxy backend"

start on runlevel [2345]
stop on runlevel [!2345]


respawn
respawn limit 10 5
umask 007
setuid xroad
setgid xroad
console log

pre-start script
    mkdir -p -m0755 /var/run/xroad
    chown xroad:xroad /var/run/xroad
    chown xroad:xroad /etc/xroad
end script

exec /usr/share/xroad/bin/xroad-proxy

